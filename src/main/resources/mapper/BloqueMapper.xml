<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="es.fpdual.eadmin.eadmin.mapper.BloqueMapper">

	<update id="modificarRegistroDeLaTablaBloques">
		UPDATE BLOQUES
		SET ID_MODULO = #{bloque.idModulo},
		ORDEN = #{bloque.orden},
		DESCRIPCION = #{bloque.descripcion}
		ID_FORMADOR_RESPONSABLE = #{bloque.idFormadorResponsable}
		WHERE ID_BLOQUE = #{bloque.idModulo} AND
		EMPRESA = #{bloque.empresa}
	</update>
	
	<select id="baseSelectDocumento" resultMap="crearRegistro">
		SELECT * FROM BLOQUES WHERE 1=1
	</select>
		
	<select id="consultarTodosLosRegistrosDeLaTablaBloques" resultMap="crearRegistro">
		<include refid="baseSelectDocumento"/>
	</select>
	
	<select id="consultarRegistrosDeLaTablaModulosPorIdBloques" resultMap="crearDocumento">
		<include refid="baseSelectDocumento"/> AND ID_BLOQUES=#{idBloque}
	</select>
	
	<select id="consultarRegistrosDeLaTablaModulosPorEmpresa" resultMap="crearRegistro">
		<include refid="baseSelectDocumento"/> AND EMPRESA=#{empresa}

	</select>
	
	<select id="consultarRegistrosDeLaTablaModulosPorEmpresaYIdBloque" resultMap="crearRegistro">
		<include refid="baseSelectDocumento"/>AND EMPRESA=#{empresa} AND ID_RESULTADO=#{resultado}

	</select>
	
	<select id="obtenerEmpresas" resultMap="crearRegistro">
		<include refid="baseSelectDocumento"/> GROUP BY EMPRESA

	</select>
	
	<select id="obtenerBloques" resultMap="crearRegistro">
		<include refid="baseSelectDocumento"/> GROUP BY ID_BLOQUE

	</select>
	

	<resultMap id="crearRegistro" type="fpbasicsdb.modelo.TablaBloques">
		<constructor>
			<idArg column="EMPRESA" javaType="String" />
			<arg column="ID_BLOQUES" javaType="Integer" />
			<arg column="ID_MODULO" javaType="Integer" />
			<arg column="ORDEN" javaType="Integer" />
			<arg column="DESCRIPCION" javaType="String" />
			<arg column="ID_FORMADOR_RESPONSABLE" javaType="Integer" />
		</constructor>
	</resultMap>
</mapper>